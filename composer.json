{
    "name": "mydevcodes/ipaymer-php",
    "description": "The official iPaymer PHP library",
    "keywords": [
        "mydevcodes",
        " ipaymer-php"
    ],
    "homepage": "https://github.com/mydevcodes/ipaymer-php",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mustafe Hyseni",
            "email": "tafa@thesocialplus.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^6.0|^7.0",
        "rakit/validation": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Mydevcodes\\IpaymerPhp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mydevcodes\\IpaymerPhp\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
